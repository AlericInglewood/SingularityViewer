<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel border="true" bottom="-409" height="408" label="Input &amp; Camera" left="102" name="Input panel" width="517">
	<text bottom="-10" follows="top" height="10" left="5" font="SansSerifBold" name=" Camera Options:">Camera Options:</text>
	<slider bottom="-40" can_edit_text="true" decimal_digits="2" follows="top" label="Angle:" label_width="60" width="192" height="16" increment=".025" initial_val="1.57" left="10" max_val="2.97" min_val=".17" name="camera_fov" value="60"/>
	<text bottom_delta="0" follows="top" left_delta="214" height="16" name="Move automatically for:">Move automatically for:</text> 
	<check_box bottom_delta="0" follows="top" left_delta="125" initial_value="false" label="Edit" name="edit_camera_movement" tool_tip="Use automatic camera positioning when entering and exiting edit mode"/>
	<check_box bottom_delta="0" follows="top" left_delta="56" initial_value="false" label="Appearance" name="appearance_camera_movement" tool_tip="Use automatic camera positioning while in appearance mode"/>
	<slider can_edit_text="true" control_name="CameraOffsetScale" decimal_digits="2" follows="top" left="10" label="Distance:" label_width="60" width="192" height="16" increment=".025" initial_val="1" min_val=".5" max_val="3" name="camera_offset_scale" value="1"/>
	<check_box bottom_delta="0" follows="top" left_delta="214" initial_value="false" label="Unsit on Camera Reset" name="unsit_on_camera_reset" tool_tip="Stand up automatically when you press Esc and the camera switches to third person mode"/>
	<text follows="top" left="10" name="Mouselook:">Mouselook:</text>
	<slider can_edit_text="true" follows="top" left="15" height="16" label="Sensitivity:" label_width="60" decimal_digits="2" increment="0.25" initial_val="2" max_val="15" min_val="0" name="mouse_sensitivity" width="192"/>
	<check_box bottom_delta="-20" follows="top" label="Invert" name="invert_mouse"/>
	<check_box bottom_delta="0" follows="top" left_delta="68" label="Show Avatar" name="first_person_avatar_visible" initial_value="false"/>
	<button follows="top" left="10" height="20" label="Joystick Setup" name="mouse2stick_setup_button" width="120"/>
	<check_box follows="top" bottom_delta="-20" label="Hold jump/crouch to Fly/land" name="automatic_fly" tool_tip="Holding the Up and Down keys will cause you to fly or land if this box is checked."/>
	<text top="275" left="15" height="16" font="SansSerifBold" name="Key Changer">Key Changer</text>
	<scroll_list follows="top|bottom|left|right" bottom="15" height="204" left="15" multi_select="false" name="binding_list">
		 <column label="Trigger" name="trigger" width="70"/>
		 <column label="Key" name="shortcut" width="70"/>
		 <column label="" name="key" width="-1"/>
		 <column label="Name" name="name" width="160"/>
	</scroll_list>
</panel>
